<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Offers list</h1>
    <%= link_to "Добавить предложение", new_offer_path, class: "btn btn-secondary" %>
    <div class="bs-example">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>City</th>
            <th>Duration</th>
            <th>Description</th>
            <th>User</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
        <% var = 0 %>
        <% @offers.each do |offer| %>
          <% var += 1 %>
          <tr>
            <td><%= link_to var, offer_path(offer) %></td>
            <td><%= offer.city %></td>
            <td><%= offer.duration %> </td>
            <td><%= offer.description %></td>
            <td><%= offer.user.email if !offer.user.nil?%></td>
            <td><%= link_to(image_tag(offer.image.url(:thumb)), offer_path(offer)) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>