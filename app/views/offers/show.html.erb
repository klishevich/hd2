<% provide(:title, "show offer") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1>Show Offer</h1>
   <%= form_for(@offer) do |f| %>
    <div class="form-group">
      <%= f.label :city %><%= f.text_field :city, class: "form-control", disabled: true %>
    </div>
    <div class="form-group">
      <%= f.label :duration %><%= f.text_field :duration, class: "form-control", disabled: true %>
    </div>
    <div class="form-group">
      <%= f.label :description %><%= f.text_field :description, class: "form-control", disabled: true %>
    </div>
    <div class="form-group">
      <%= f.label :email %><%= f.text_field :email, class: "form-control", disabled: true %>
    </div>
    <%= link_to "К списку", offers_path, class: "btn btn-large btn-secondary" %>
  <% end %> 
  </div>
</div>